<h2>Leden uitnodigen voor <%= @team.name %></h2>


<%= form_for [@team, @membership] do |f| %>
	<%= f.collection_select(:user_id, @users, :id, :name) %>
	<%= f.submit 'opslaan', data: { disable_with: 'Aan het versturen...' }, class: 'btn submit' %>
<% end %>

<% if @team.memberships.any? %>
	<% Membership.where(team_id: @team.id).each do |m| %>
		<% User.where.not(id: m.user_id, admin: true).each do |u| %>
			<%= u.name %>
		<% end %>
	<% end %>
<% else %>
	<% @users.each do |u| %>
		<%= u.name %>
	<% end %>
<% end %>
