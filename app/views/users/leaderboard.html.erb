<h2 class="title">Algemeen Klassement</h2>

<%# render 'shared/find_user' %>

<ul class='sort'>
  <li>
    Sorteren:
  </li>
  <li>
    <%= link_to 'Normale vragen', leaderboard_normal_questions_path %>
  </li>
  <li>
    <%= link_to 'Kies de juiste afbeelding', leaderboard_choose_image_path %>
  </li>
  <li>
    <%= link_to 'Schrijf het woord', leaderboard_write_word_path %>
  </li>
</ul>

<table>
  <thead>
    <tr>
      <th>Positie</th>
      <th>Gebruiker</th>
      <th>Punten</th>
    </tr>
  </thead>
  <tbody>
  	<% @users.each_with_index do |user, index| %>
    <tr>
      <td><%= index + 1 %></td>
      <td><%= link_to user.name, user %></td>
      <td><%= user.points %></td>
    </tr>
  	<% end %>
  </tbody>
</table>
