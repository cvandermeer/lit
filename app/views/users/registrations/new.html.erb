<div class="left">
  <div class="container">
    <div class="view clearfix form">
      <h4 class="border-none">Registreren</h4>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>
      <ul>
        <li>
          <%= f.label :email, 'Email adres' %><br />
          <%= f.email_field :email, autofocus: true %>
        </li>

        <li>
          <%= f.label :password, 'Wachtwoord' %>
          <% if @validatable %>
          <em>(<%= @minimum_password_length %> minimum karakters)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: 'off' %>
        </li>

        <li>
          <%= f.label :password_confirmation, 'Wachtwoord herhalen' %><br />
          <%= f.password_field :password_confirmation, autocomplete: 'off' %>
        </li>

        <li>
          <%= f.submit 'Registreren', :class => 'btn orange edit left bigger' %>
        </li>
      </ul>
      <% end %>
    </div>
  </div>
</div>
<%= render 'devise/shared/links' %>

<%= render 'shared/welkom' %>