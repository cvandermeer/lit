<p><%= @question.title %></p>
<p>Categorie: <%= @question.category.title %></p>
<p>Taal: <%= @question.language.title %></p>

<ul>
<% @question.answers.each do |answer| %>
	<li>
		<%= answer.title %>
		<% if answer.id == @question.correct_answer_id %>
			Correcte vraag
		<% end %>
	</li>
<% end %>
</ul>
