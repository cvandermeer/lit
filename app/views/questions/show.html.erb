<% if @question.image %>
	<div class='question-image'>
		<%= image_tag @question.image.url(:thumb) %>
	</div>
<% end %>
<p><%= @question.title %></p>
<p>Categorie: <%= @question.category.title %></p>
<p>Taal: <%= @question.language.title %></p>

<div class='answer-container'>
	<% @question.answers.shuffle.each do |answer| %>
		<%= link_to answer.title, submit_answer_path(@question, answer_id: answer.id),
				class: 'answer' %>
	<% end %>
</div>

<div class='timer'></div>